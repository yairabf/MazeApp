<Window x:Class="Wpf_Client.view.SinglePlayerMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Client.view"
        mc:Ignorable="d"
        Title="SinglePlayerMenu" Height="300" Width="300">
    <Grid>
        <Label Content="Maze rows: " HorizontalAlignment="Left" Margin="10,98,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="Maze name:" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="Maze Columns:" HorizontalAlignment="Left" Margin="10,148,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="{Binding NameOfMaze}" VerticalAlignment="Top" Width="120" Margin="172,51,0,0"/>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="{Binding NumOfRows}" VerticalAlignment="Top" Width="120" Margin="172,102,0,0"/>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="{Binding NumOfCol}" VerticalAlignment="Top" Width="120" Margin="172,152,0,0"/>
        <Button Content="Ok" HorizontalAlignment="Left" Margin="100,227,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
